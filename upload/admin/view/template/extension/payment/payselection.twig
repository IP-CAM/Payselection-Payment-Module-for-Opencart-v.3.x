                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="payment_payselection_status">
                            {{ entry_status }}
                        </label>

                        <div class="col-sm-9">
                            <select name="payment_payselection_status" id="payment_payselection_status" class="form-control">
                                {% if payment_payselection_status %}
                                    <option value="1" selected="selected">{{ status_enabled }}</option>
                                    <option value="0">{{ status_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ status_enabled }}</option>
                                    <option value="0" selected="selected">{{ status_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

          
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="">
                            {{ entry_serviceId }}
                        </label>
                        <div class="col-sm-9">
                            <input type="text" name="payment_payselection_serviceId" value="{{ payment_payselection_serviceId }}" class="form-control" />
                        </div>
                    </div>

                   <div class="form-group">
